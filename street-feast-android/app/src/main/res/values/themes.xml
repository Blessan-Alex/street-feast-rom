<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StreetFeast" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/action_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.StreetFeast" parent="Base.Theme.StreetFeast" />
    
    <!-- Button Styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="backgroundTint">@color/action_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_lg</item>
    </style>
    
    <style name="Button.Danger" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="backgroundTint">@color/action_danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_lg</item>
    </style>
    
    <!-- Text Styles -->
    <style name="Text" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="Text.Caption">
        <item name="android:textSize">@dimen/text_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Card Style -->
    <style name="Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>
</resources>
