<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_md"
    android:layout_marginVertical="@dimen/spacing_sm"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Order Number -->
        <TextView
            android:id="@+id/tvOrderNumber"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Order #123"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Order Type Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipOrderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:textColor="@color/white"
            tools:text="Parcel"
            app:chipBackgroundColor="@color/status_inkitchen"
            app:layout_constraintStart_toEndOf="@id/tvOrderNumber"
            app:layout_constraintTop_toTopOf="@id/tvOrderNumber"
            app:layout_constraintBottom_toBottomOf="@id/tvOrderNumber" />

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            style="@style/Text.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5 min ago"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Items List -->
        <TextView
            android:id="@+id/tvItems"
            style="@style/Text.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            tools:text="2× Chicken Burger - Large\n1× Caesar Salad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrderNumber" />

        <!-- Chef Tip Section -->
        <TextView
            android:id="@+id/tvChefTipLabel"
            style="@style/Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="@string/chef_tip_label"
            android:textStyle="bold"
            android:textColor="@color/action_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItems" />

        <TextView
            android:id="@+id/tvChefTip"
            style="@style/Text.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:background="@drawable/bg_input"
            android:padding="@dimen/spacing_md"
            tools:text="Extra spicy, no onions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChefTipLabel" />

        <!-- Mark Prepared Button -->
        <Button
            android:id="@+id/btnMarkPrepared"
            style="@style/Button.Primary"
            android:layout_width="0dp"
            android:layout_height="@dimen/min_touch_target"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="@string/action_mark_prepared"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChefTip" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


